@model Quotation

@{
    ViewBag.Title = "Price Quotation";
}

<form asp-action="Index" method="post">

    <div class="row text-danger">
        <label asp-for="Subtotal" class="col-form-label col-md-3">Subtotal:</label>
        <div class="col-md-4">
            <input asp-for="Subtotal" class="form-control" />
        </div>
        <span asp-validation-for="Subtotal" class="col text-warning"></span>
    </div>

    <div class="row text-danger">
        <label asp-for="DiscountPercent" class="text-danger">Discount percent:</label>
        <div class="col-md-4">
            <input asp-for="DiscountPercent" class="form-control" />
        </div>
        <span asp-validation-for="DiscountPercent" class="col text-warning"></span>
    </div>

    <div class=" row text-danger">
        <label class="text-danger">Discount amount:</label>
        <label class="col">@ViewBag.Discount.ToString("c2")</label>
    </div>

    <div class="text-danger">
        <label class="col-md-3">Total:</label>
        <label class="col">@ViewBag.Total.ToString("c2")</label>
    </div>

    <div class="row">
        <div class="col text-danger">
            <button class="btn btn-success" type="submit">Calculate</button>
            <a class="btn btn-success ms-2" asp-action="Index">Clear</a>
        </div>
    </div>

</form>